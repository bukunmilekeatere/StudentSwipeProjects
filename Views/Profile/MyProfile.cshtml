@model StudentSwipe.Models.Profile

<link href="https://fonts.googleapis.com/css?family=Montserrat:400,800" rel="stylesheet" />

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">@Model.FullName</h3>
                    <h6 class="theme-color lead">@Model.UserType</h6>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Age</label>
                                <p>@Model.Age</p>
                            </div>
                            <div class="media">
                                <label>User Type</label>
                                <p>@Model.UserType</p>
                            </div>
                            <div class="media">
                                <label>Study Preferences</label>
                                <p>@Model.StudyPreferences</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>Interests</label>
                                <p>@Model.Interests</p>
                            </div>
                            <div class="media">
                                <label>Email</label>
                                <p>info@domain.com</p> <!-- You can bind to Model.Email if available -->
                            </div>
                            @if (Model.UserType == "University")
                            {
                                <div class="media">
                                    <label>Roommate Prefs</label>
                                    <p>@Model.RoommatePreferences</p>
                                </div>
                            }
                            <div class="media">
                                <label>Profile</label>
                                <p>Active</p>
                            </div>
                        </div>
                    </div>
                    <a asp-action="CreateOrEdit" class="edit-button">Edit Profile</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-picture" />
                    }
                    else
                    {
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Default Avatar" />
                    }
                </div>
            </div>
        </div>
    </div>
</section>
